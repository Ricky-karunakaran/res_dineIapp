<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="1200.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="systemAccount.Controller.RestaurantAccountController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="reset_password_email_input" alignment="CENTER" maxWidth="200.0" prefHeight="26.0" prefWidth="591.0" promptText="Enter Email" styleClass="input-box">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin></TextField>
            <TextField fx:id="verification_code_input" maxWidth="200.0" promptText="Enter Verification Code" styleClass="input-box" visible="false" />
            <TextField fx:id="reset_password_new_password" maxWidth="200.0" promptText="Enter New Password" styleClass="input-box" visible="false">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="reset_password_submit" mnemonicParsing="false" onAction="#send_reset_password" styleClass="action-button" text="Submit">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="reset_button" mnemonicParsing="false" onAction="#reset_password" styleClass="action-button" text="Reset" visible="false">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-text" text="Reset Restaurant Account Password" />
         </children>
      </HBox>
   </top>
</BorderPane>
